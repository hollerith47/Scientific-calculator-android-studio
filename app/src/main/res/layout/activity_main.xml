<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/bgColor"
        android:weightSum="10"
        tools:context=".MainActivity">
    <TextView
            android:id="@+id/tvSecondary"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/bgColor"
            android:text="@integer/btn0"
            android:textColor="@color/colorTop"
            android:textSize="30sp"
            android:textAlignment="viewEnd"
            android:padding="10dp"
            android:gravity="bottom"
            android:maxLines="1"
            android:layout_weight="1"
            tools:ignore="RtlCompat">

    </TextView>
    <TextView
            android:id="@+id/tvMain"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/bgColor"
            android:text="@integer/btn0"
            android:textColor="@color/white"
            android:textSize="60sp"
            android:textAlignment="viewEnd"
            android:padding="10dp"
            android:gravity="bottom"
            android:maxLines="1"
            android:layout_weight="2"
            tools:ignore="RtlCompat">
    </TextView>
    <LinearLayout
            android:layout_weight="7"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <LinearLayout
                android:orientation="vertical"
                android:weightSum="7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                    tools:ignore="UselessParent">
                <LinearLayout
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                                android:orientation="horizontal"
                                android:weightSum="4"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                tools:ignore="UselessParent">
                                <Button
                                        android:id="@+id/btnAC"
                                        android:text="@string/btnAC"
                                        android:backgroundTint="@color/bgColor"
                                        android:textSize="24sp"
                                        android:textColor="#4382BF"
                                        android:layout_weight="1"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        style="?android:attr/buttonBarButtonStyle">

                                </Button>
                                <Button
                                        android:id="@+id/btnC"
                                        android:text="@string/btnC"
                                        android:backgroundTint="@color/bgColor"
                                        android:textSize="24sp"
                                        android:textColor="#4382BF"
                                        android:layout_weight="1"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        style="?android:attr/buttonBarButtonStyle">

                                </Button>
                                <Button
                                        android:id="@+id/btnBb1"
                                        android:text="@string/btnBb1"
                                        android:backgroundTint="@color/bgColor"
                                        android:textSize="24sp"
                                        android:textColor="#4382BF"
                                        android:layout_weight="1"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        style="?android:attr/buttonBarButtonStyle">

                                </Button>
                                <Button
                                        android:id="@+id/btnBb2"
                                        android:text="@string/btnBb2"
                                        android:backgroundTint="@color/bgColor"
                                        android:textSize="24sp"
                                        android:textColor="#4382BF"
                                        android:layout_weight="1"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        style="?android:attr/buttonBarButtonStyle">

                                </Button>
                        </LinearLayout>

                </LinearLayout>
                <LinearLayout
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <LinearLayout
                            android:orientation="horizontal"
                            android:weightSum="5"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            tools:ignore="UselessParent">
                        <Button
                                android:id="@+id/btnSin"
                                android:text="@string/btnSin"
                                android:textAllCaps="false"
                                android:backgroundTint="@color/bgColor"
                                android:textSize="20sp"
                                android:textColor="#4382BF"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                style="?android:attr/buttonBarButtonStyle">

                        </Button>
                        <Button
                                android:id="@+id/btnCos"
                                android:text="@string/btnCos"
                                android:textAllCaps="false"
                                android:backgroundTint="@color/bgColor"
                                android:textSize="20sp"
                                android:textColor="#4382BF"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                style="?android:attr/buttonBarButtonStyle">

                        </Button>
                        <Button
                                android:id="@+id/btnTan"
                                android:text="@string/btnTan"
                                android:textAllCaps="false"
                                android:backgroundTint="@color/bgColor"
                                android:textSize="17sp"
                                android:textColor="#4382BF"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                style="?android:attr/buttonBarButtonStyle">

                        </Button>
                        <Button
                                android:id="@+id/btnLog"
                                android:text="@string/btnLog"
                                android:textAllCaps="false"
                                android:backgroundTint="@color/bgColor"
                                android:textSize="20sp"
                                android:textColor="#4382BF"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                style="?android:attr/buttonBarButtonStyle">

                        </Button>
                        <Button
                                android:id="@+id/btnLn"
                                android:text="@string/btnLn"
                                android:textAllCaps="false"
                                android:backgroundTint="@color/bgColor"
                                android:textSize="20sp"
                                android:textColor="#4382BF"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                style="?android:attr/buttonBarButtonStyle">

                        </Button>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <LinearLayout
                            android:orientation="horizontal"
                            android:weightSum="5"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            tools:ignore="UselessParent">
                        <Button
                                android:id="@+id/btnFact"
                                android:text="@string/btnFact"
                                android:textAllCaps="false"
                                android:backgroundTint="@color/bgColor"
                                android:textSize="24sp"
                                android:textColor="@color/btnFonctionColor"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                style="?android:attr/buttonBarButtonStyle">

                        </Button>
                        <Button
                                android:id="@+id/btnSquare"
                                android:text="@string/btnSquare"
                                android:textAllCaps="false"
                                android:backgroundTint="@color/bgColor"
                                android:textSize="24sp"
                                android:textColor="#4382BF"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                style="?android:attr/buttonBarButtonStyle">

                        </Button>
                        <Button
                                android:id="@+id/btnSqrt"
                                android:text="@string/btnSqrt"
                                android:textAllCaps="false"
                                android:backgroundTint="@color/bgColor"
                                android:textSize="24sp"
                                android:textColor="#4382BF"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                style="?android:attr/buttonBarButtonStyle">

                        </Button>
                        <Button
                                android:id="@+id/btnOneByX"
                                android:text="@string/btnOneByX"
                                android:textAllCaps="false"
                                android:backgroundTint="@color/bgColor"
                                android:textSize="18sp"
                                android:textColor="#4382BF"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                style="?android:attr/buttonBarButtonStyle">

                        </Button>
                        <Button
                                android:id="@+id/btnDivide"
                                android:text="@string/btnDivide"
                                android:textAllCaps="false"
                                android:backgroundTint="@color/bgColor"
                                android:textSize="20sp"
                                android:textColor="#4382BF"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                style="?android:attr/buttonBarButtonStyle">

                        </Button>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <LinearLayout
                            android:orientation="horizontal"
                            android:weightSum="4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            tools:ignore="UselessParent">
                        <Button
                                android:id="@+id/btn7"
                                android:text="@integer/btn7"
                                android:textAllCaps="false"
                                android:backgroundTint="@color/bgColor"
                                android:textSize="24sp"
                                android:textColor="@color/white"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                style="?android:attr/buttonBarButtonStyle">

                        </Button>
                        <Button
                                android:id="@+id/btn8"
                                android:text="@integer/btn8"
                                android:textAllCaps="false"
                                android:backgroundTint="@color/bgColor"
                                android:textSize="24sp"
                                android:textColor="@color/white"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                style="?android:attr/buttonBarButtonStyle">

                        </Button>
                        <Button
                                android:id="@+id/btn9"
                                android:text="@integer/btn9"
                                android:textAllCaps="false"
                                android:backgroundTint="@color/bgColor"
                                android:textSize="24sp"
                                android:textColor="@color/white"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                style="?android:attr/buttonBarButtonStyle">

                        </Button>
                        <Button
                                android:id="@+id/btnMultiple"
                                android:text="@string/btnMultiple"
                                android:textAllCaps="false"
                                android:backgroundTint="@color/bgColor"
                                android:textSize="24sp"
                                android:textColor="@color/btnFonctionColor"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                style="?android:attr/buttonBarButtonStyle">

                        </Button>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <LinearLayout
                            android:orientation="horizontal"
                            android:weightSum="4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            tools:ignore="UselessParent">
                        <Button
                                android:id="@+id/btn4"
                                android:text="@integer/btn4"
                                android:textAllCaps="false"
                                android:backgroundTint="@color/bgColor"
                                android:textSize="24sp"
                                android:textColor="@color/white"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                style="?android:attr/buttonBarButtonStyle">

                        </Button>
                        <Button
                                android:id="@+id/btn5"
                                android:text="@integer/btn5"
                                android:textAllCaps="false"
                                android:backgroundTint="@color/bgColor"
                                android:textSize="24sp"
                                android:textColor="@color/white"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                style="?android:attr/buttonBarButtonStyle">

                        </Button>
                        <Button
                                android:id="@+id/btn6"
                                android:text="@integer/btn6"
                                android:textAllCaps="false"
                                android:backgroundTint="@color/bgColor"
                                android:textSize="24sp"
                                android:textColor="@color/white"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                style="?android:attr/buttonBarButtonStyle">

                        </Button>
                        <Button
                                android:id="@+id/btnMinus"
                                android:text="@string/btnMinus"
                                android:textAllCaps="false"
                                android:backgroundTint="@color/bgColor"
                                android:textSize="30sp"
                                android:textColor="@color/btnFonctionColor"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                style="?android:attr/buttonBarButtonStyle">

                        </Button>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <LinearLayout
                            android:orientation="horizontal"
                            android:weightSum="4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            tools:ignore="UselessParent">
                        <Button
                                android:id="@+id/btn1"
                                android:text="@integer/btn1"
                                android:textAllCaps="false"
                                android:backgroundTint="@color/bgColor"
                                android:textSize="24sp"
                                android:textColor="@color/white"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                style="?android:attr/buttonBarButtonStyle">

                        </Button>
                        <Button
                                android:id="@+id/btn2"
                                android:text="@integer/btn2"
                                android:textAllCaps="false"
                                android:backgroundTint="@color/bgColor"
                                android:textSize="24sp"
                                android:textColor="@color/white"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                style="?android:attr/buttonBarButtonStyle">

                        </Button>
                        <Button
                                android:id="@+id/btn3"
                                android:text="@integer/btn3"
                                android:textAllCaps="false"
                                android:backgroundTint="@color/bgColor"
                                android:textSize="24sp"
                                android:textColor="@color/white"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                style="?android:attr/buttonBarButtonStyle">

                        </Button>
                        <Button
                                android:id="@+id/btnPlus"
                                android:text="@string/btnPlus"
                                android:textAllCaps="false"
                                android:backgroundTint="@color/bgColor"
                                android:textSize="30sp"
                                android:textColor="@color/btnFonctionColor"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                style="?android:attr/buttonBarButtonStyle">

                        </Button>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <LinearLayout
                            android:orientation="horizontal"
                            android:weightSum="4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            tools:ignore="UselessParent">
                        <Button
                                android:id="@+id/btnPi"
                                android:text="@string/btnPi"
                                android:textAllCaps="false"
                                android:backgroundTint="@color/bgColor"
                                android:textSize="24sp"
                                android:textColor="@color/white"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                style="?android:attr/buttonBarButtonStyle">

                        </Button>
                        <Button
                                android:id="@+id/btn0"
                                android:text="@integer/btn0"
                                android:textAllCaps="false"
                                android:backgroundTint="@color/bgColor"
                                android:textSize="24sp"
                                android:textColor="@color/white"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                style="?android:attr/buttonBarButtonStyle">

                        </Button>
                        <Button
                                android:id="@+id/btnDot"
                                android:text="@string/btnDot"
                                android:textAllCaps="false"
                                android:backgroundTint="@color/bgColor"
                                android:textSize="28sp"
                                android:textColor="@color/white"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                style="?android:attr/buttonBarButtonStyle">

                        </Button>
                        <Button
                                android:id="@+id/btnEqual"
                                android:text="@string/btnEqual"
                                android:textAllCaps="false"
                                android:backgroundTint="@color/bgColor"
                                android:textSize="30sp"
                                android:textColor="@color/btnFonctionColor"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                        </Button>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

    </LinearLayout>

</LinearLayout>